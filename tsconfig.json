{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "strict": true,
    "target": "es5"
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/*.ts", "src/*.tsx", "types/*.d.ts"]
}
